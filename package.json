{
  "name": "Website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
      "build-css": "stylus source/stylesheets/index.styl -o static/css",
      "watch-css": "stylus source/stylesheets/index.styl -o static/css -w",
      "clean": "rm -rf static/css && mkdir -p static/css",
      "build": "npm run clean && npm run build-css",
      "watch": "npm run clean && npm run watch-css & nodemon server -e js,jade",
      "start": "pm2 start app.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/turbo-formula/new_website.git"
  },
  "author": "Turbo Formula",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/turbo-formula/new_website/issues"
  },
  "dependencies": {
    "express": "^4.14.0",
    "jade": "^1.11.0",
    "morgan": "^1.7.0",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "mocha": "^3.1.2",
    "should": "^11.1.1",
    "supertest": "^2.0.0"
  }
}
